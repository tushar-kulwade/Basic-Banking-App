<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tkdeveloper.basicbankingapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/bank"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bank"
        android:supportsRtl="true"
        android:theme="@style/Theme.Banking">

        <activity
            android:name="com.tkdeveloper.basicbankingapp.user_list"
            android:label="Banking System"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.tkdeveloper.basicbankingapp.MainActivity"
            android:label="Banking System"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.tkdeveloper.basicbankingapp.user_data"
            android:label="User Details"
            android:parentActivityName="com.tkdeveloper.basicbankingapp.user_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.tkdeveloper.basicbankingapp.sendtouser"
            android:label="Transfer Money"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.tkdeveloper.basicbankingapp.history_list"
            android:label="Transactions"
            android:parentActivityName="com.tkdeveloper.basicbankingapp.user_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.tkdeveloper.basicbankingapp.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>